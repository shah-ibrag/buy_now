<div class="container mt-5">
  <h2 class="text-center"><%= @category.name %></h2>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <% if product.image.attached? %>
            <%= image_tag product.image, class: "card-img-top img-fluid p-3", style: "height: 150px; object-fit: contain;" %>
          <% end %>
          <div class="card-body d-flex flex-column align-items-center">
            <h5 class="card-title text-center"><%= link_to product.name, product_path(product) %></h5>
            <p class="card-text text-center"><%= truncate(product.description, length: 100) %></p>
            <p class="card-text mt-auto text-center"><strong><%= number_to_currency(product.price) %></strong></p>
            <%= link_to 'View Details', product_path(product), class: 'btn btn-primary mt-3' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>