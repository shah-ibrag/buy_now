<h2>Products</h2>

<%= link_to 'New Product', new_admin_product_path, class: 'btn btn-primary' %>

<table class="table mt-3">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= truncate(product.description, length: 50) %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.category.name %></td>
        <td>
          <%= link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-secondary btn-sm' %>
          <%= link_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>