<div class="container mt-5">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <% if product.image.attached? %>
            <%= image_tag product.image, class: "card-img-top img-fluid", style: "height: 200px; object-fit: cover;" %>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= truncate(product.description, length: 100) %></p>
            <p class="card-text mt-auto"><strong><%= number_to_currency(product.price) %></strong></p>
            <a href="#" class="btn btn-primary mt-3">View Details</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>