<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <% if @product.image.attached? %>
        <%= image_tag @product.image, class: "img-fluid rounded shadow-sm", style: "max-height: 400px; object-fit: contain;" %>
      <% end %>
    </div>
    <div class="col-md-6 d-flex flex-column justify-content-center">
      <h2 class="mb-3" style="font-family: 'Pacifico', cursive;"><%= @product.name %></h2>
      <p class="mb-4" style="font-family: 'Roboto', sans-serif; font-size: 1.1rem;"><%= @product.description %></p>
      <p class="mb-4"><strong>Price: <%= number_to_currency(@product.price) %></strong></p>
      <%= link_to 'Add to Cart', add_to_cart_path(product_id: @product.id), method: :post, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>