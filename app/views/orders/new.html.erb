<h2 class="text-center mt-5">Checkout</h2>

<div class="container d-flex justify-content-center mt-5">
  <div class="card shadow-sm p-4" style="width: 100%; max-width: 600px;">
    <%= form_with url: orders_path, local: true do |f| %>
      <div class="form-group mb-3">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, name: 'customer[name]', class: 'form-control', placeholder: 'Enter your full name' %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, name: 'customer[email]', class: 'form-control', placeholder: 'Enter your email address' %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :address, class: 'form-label' %>
        <%= f.text_field :address, name: 'customer[address]', class: 'form-control', placeholder: 'Enter your street address' %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :city, class: 'form-label' %>
        <%= f.text_field :city, name: 'customer[city]', class: 'form-control', placeholder: 'Enter your city' %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :province, class: 'form-label' %>
        <%= f.select :province, options_for_select(['AB', 'BC', 'MB', 'NB', 'NL', 'NS', 'ON', 'PE', 'QC', 'SK']), name: 'customer[province]', class: 'form-select' %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :postal_code, class: 'form-label' %>
        <%= f.text_field :postal_code, name: 'customer[postal_code]', class: 'form-control', placeholder: 'Enter your postal code' %>
      </div>

      <%= hidden_field_tag 'order[status]', 'pending' %>

      <div class="text-center">
        <%= f.submit 'Place Order', class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
  </div>
</div>